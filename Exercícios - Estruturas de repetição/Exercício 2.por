programa
{
	
	funcao inicio()
	{
		inteiro num
		num = 0
		enquanto (num < 1)
		{
			num = num + 1
			escreva(num)
			}
		enquanto (num < 16)
		{
			num = num * 2
			escreva(num)
			}
	}
}
